<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        margin-top: 2rem;
        margin-bottom: 1rem;
        margin-right: 2rem;
        text-align: center;
        opacity: 0.75;
        
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
    }
    #taxSwitch{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        margin-left: 2rem;
    }
</style>
    <body>
       
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-sharp fa-solid fa-mountain-sun"></i></div>
                <p>Amazing views</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-font-awesome"></i></div>
                <p>Icons</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beachfront</p>
            </div>
            <div class="filter">
                <div><i class="fa-sharp fa-solid fa-person-swimming"></i></div>
                <p>Amazing pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Top cities</p>
            </div>
            <div class="filter">
                <div> <i class="fa-solid fa-tents"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div> <i class="fa-sharp fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>

            <div id="taxSwitch">
                <div class="form-check-reverse form-switch ">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Default switch checkbox input</label>
                  </div>
            </div>
        </div>

        <!-- Card -->
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for (listing of allListings){%>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src=<%=listing.image.url%> class="card-img-top" alt="listing_image" style="height:20rem">
                        <!-- Card Image Overlay -->
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                                <br />
                                &#8377 <%= listing.price?.toLocaleString("en-IN")%>
                                <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>

    </body>

    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click",()=>{
            let taxInfo = document.getElementsByClassName("tax-info");
            for(info of taxInfo){
                if(info.style.display !="inline"){
                info.style.display="inline";
                }else{
                    info.style.display = "none";
                }
            }
        })
    </script>
